<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Ingredients & Doses: </th>
            <% @cocktail.doses.each do |dose| %>
            <td> <%= dose.description %> </td>
            <td> <%= dose.ingredient.name%> </td>
             <%= link_to "Delete doses", cocktail_dose_path(@cocktail, dose), method: :delete, class: 'btn btn-danger' %>
            <% end %>
          <%= link_to "Back to cocktails", cocktails_path(@cocktails), class: 'btn btn-primary' %>
        </tbody>
      </table>
    </div>
  </div>
</div>

